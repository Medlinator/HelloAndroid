<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/growwithudacity" />

    <TextView
        android:id="@+id/business-name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:text="@string/business_name"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/business-address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/business-name"
        android:autoLink="map"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:text="@string/business_address"
        android:textColorLink="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/business-phone-number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/business-address"
        android:autoLink="phone"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="@string/business_phone_number"
        android:textColorLink="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/business-website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/business-phone-number"
        android:autoLink="web"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="@string/business_website"
        android:textColorLink="#FFFFFF"
        android:textSize="20sp" />


</RelativeLayout>
