<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/growwithudacity"
        android:scaleType="centerCrop"
        android:id="@+id/image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:fontFamily="sans-serif-light"
        android:paddingTop="30dp"
        android:paddingLeft="20dp"
        android:text="Udacity"
        android:textSize="16sp"
        android:id="@+id/business-name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/business-name"
        android:fontFamily="sans-serif-light"
        android:paddingTop="15dp"
        android:paddingLeft="20dp"
        android:text="2465 Latham St"
        android:textSize="14sp"
        android:id="@+id/business-address" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/business-address"
        android:fontFamily="sans-serif-light"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:text="Mountain View, CA 94043"
        android:textSize="14sp"
        android:id="@+id/business-city-state-zip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/business-city-state-zip"
        android:fontFamily="sans-serif-light"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:text="650-555-5555"
        android:textSize="14sp"
        android:id="@+id/business-phone-number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/business-phone-number"
        android:fontFamily="sans-serif-light"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:text="www.udacity.com"
        android:textSize="14sp"
        android:id="@+id/business-website" />


</RelativeLayout>
